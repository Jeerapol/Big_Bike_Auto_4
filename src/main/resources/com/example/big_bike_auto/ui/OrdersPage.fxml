<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.big_bike_auto.controller.OrdersPageController" prefWidth="1200" prefHeight="800">
    <top>
        <HBox spacing="10">
            <children>
                <Label text="ใบสั่งซื้ออะไหล่" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="รีเฟรช" onAction="#onRefresh"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tvOrders" prefHeight="560">
            <columns>
                <TableColumn fx:id="colId" text="PO ID" prefWidth="280"/>
                <TableColumn fx:id="colSupplier" text="ผู้ขาย" prefWidth="200"/>
                <TableColumn fx:id="colDate" text="วันที่สร้าง" prefWidth="140"/>
                <TableColumn fx:id="colStatus" text="สถานะ" prefWidth="140"/>
                <TableColumn fx:id="colLines" text="จำนวนรายการ" prefWidth="120"/>
                <TableColumn fx:id="colTotal" text="ยอดรวม" prefWidth="140"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="btnPlace" text="สั่งซื้อ" onAction="#onPlace"/>
                <Button fx:id="btnReceive" text="รับเข้า (ปิด PO)" onAction="#onReceive"/>
                <Button fx:id="btnCancel" text="ยกเลิก" onAction="#onCancel"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </bottom>
</BorderPane>
