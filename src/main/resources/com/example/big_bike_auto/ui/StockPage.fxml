<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
  หมายเหตุสำคัญ:
  - fx:controller ต้องชี้ไปยัง "แพ็กเกจจริงของ Controller"
  - ถ้าไฟล์ Controller อยู่ใน com.example.big_bike_auto.controller
    ต้องเขียน fx:controller ให้ถูกตามนี้
-->
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.big_bike_auto.controller.StockPageController"
            prefWidth="1000" prefHeight="640">

    <top>
        <VBox spacing="6" BorderPane.alignment="CENTER">
            <Label text="สต็อกอะไหล่" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="ค้นหา:"/>
                <TextField fx:id="txtSearch" promptText="พิมพ์รหัส/ชื่ออะไหล่"/>
                <Button text="ค้นหา" onAction="#onSearch"/>
                <Button text="รีเฟรช" onAction="#onRefresh"/>
                <Button text="เติมสต็อก (รับเข้า)" onAction="#onReceive"/>
                <Button text="แนะนำสั่งซื้อ (PO Draft)" onAction="#onBuildReorder"/>
            </HBox>
            <HBox>
                <Label fx:id="lblStatus" text="พร้อมใช้งาน" />
            </HBox>
            <VBox.margin>
                <Insets top="10" left="10" right="10" bottom="6"/>
            </VBox.margin>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblParts">
            <columns>
                <TableColumn fx:id="colSku" text="SKU" prefWidth="140"/>
                <TableColumn fx:id="colName" text="ชื่อ" prefWidth="220"/>
                <TableColumn fx:id="colUnit" text="หน่วย" prefWidth="80"/>
                <TableColumn fx:id="colOnHand" text="คงเหลือ" prefWidth="90"/>
                <TableColumn fx:id="colReserved" text="จอง" prefWidth="90"/>
                <TableColumn fx:id="colAvailable" text="เบิกได้" prefWidth="90"/>
                <TableColumn fx:id="colMinStock" text="Min" prefWidth="80"/>
                <TableColumn fx:id="colLastCost" text="ต้นทุนล่าสุด" prefWidth="120"/>
                <TableColumn fx:id="colSupplier" text="ผู้ขาย" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <Button text="ปรับยอด (Adjust…)" onAction="#onAdjust"/>
            <HBox.margin>
                <Insets top="6" bottom="10" right="10"/>
            </HBox.margin>
        </HBox>
    </bottom>
</BorderPane>
