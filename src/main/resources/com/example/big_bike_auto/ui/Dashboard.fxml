<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.big_bike_auto.controller.DashboardController">
    <children>
        <!-- แถบบน -->
        <HBox spacing="12.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
            <children>
                <Label text="Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
            </children>
        </HBox>

        <!-- การ์ดสรุป -->
        <HBox spacing="12.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="64.0">
            <children>
                <VBox spacing="4.0" style="-fx-background-color: #F5F7FB; -fx-padding: 16; -fx-background-radius: 8;">
                    <children>
                        <Label text="งานซ่อมทั้งหมด" style="-fx-text-fill: #666;"/>
                        <Label fx:id="lblTotalRepairs" text="-" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </children>
                </VBox>
                <VBox spacing="4.0" style="-fx-background-color: #F5F7FB; -fx-padding: 16; -fx-background-radius: 8;">
                    <children>
                        <Label text="รอดำเนินการ" style="-fx-text-fill: #666;"/>
                        <Label fx:id="lblPendingRepairs" text="-" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </children>
                </VBox>
                <VBox spacing="4.0" style="-fx-background-color: #F5F7FB; -fx-padding: 16; -fx-background-radius: 8;">
                    <children>
                        <Label text="จำนวนสินค้า" style="-fx-text-fill: #666;"/>
                        <Label fx:id="lblInventoryItems" text="-" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- ตารางข้อมูลล่าสุด -->
        <VBox spacing="8.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="160.0" AnchorPane.bottomAnchor="16.0">
            <children>
                <Label text="กิจกรรมล่าสุด" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TableView fx:id="tblRecent" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="colType" text="ประเภท" prefWidth="120.0"/>
                        <TableColumn fx:id="colTitle" text="รายละเอียด" prefWidth="520.0"/>
                        <TableColumn fx:id="colWhen" text="เมื่อไหร่" prefWidth="200.0"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
