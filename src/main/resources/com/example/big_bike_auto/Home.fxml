<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.big_bike_auto.controller.HomeController"
            fx:id="root"
            prefWidth="1200" prefHeight="800">

    <!-- Header + MenuBar (รวมอยู่ใน <top> เดียว) -->
    <top>
        <VBox>
            <AnchorPane prefHeight="64.0" style="-fx-background-color: #3381F2;">
                <children>
                    <Label text="Big Bike Auto"
                           style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"
                           layoutX="20" layoutY="20"/>
                </children>
            </AnchorPane>

            <MenuBar>
                <menus>
                    <Menu text="Dashboard">
                        <items>
                            <MenuItem text="เปิดหน้า Dashboard" onAction="#goDashboard"/>
                        </items>
                    </Menu>

                    <Menu text="ลงทะเบียน">
                        <items>
                            <MenuItem text="เปิดหน้าลงทะเบียน" onAction="#goRegister"/>
                        </items>
                    </Menu>

                    <Menu text="รายละเอียดงานซ่อม">
                        <items>
                            <MenuItem text="เปิดหน้ารายละเอียดงานซ่อม" onAction="#goRepairDetails"/>
                        </items>
                    </Menu>

                    <Menu text="อะไหล่/สั่งซื้อ">
                        <items>
                            <MenuItem text="เปิดหน้าสต็อกอะไหล่" onAction="#goStock"/>
                            <MenuItem text="เปิดหน้าใบสั่งซื้อ" onAction="#goOrders"/>
                        </items>
                    </Menu>

                    <Menu text="ค้นหางาน">
                        <items>
                            <MenuItem text="ค้นหาด้วย Customer Code" onAction="#goLookup"/>
                        </items>
                    </Menu>

                </menus>
            </MenuBar>
        </VBox>
    </top>

    <!-- Content Root -->
    <center>
        <BorderPane fx:id="contentRoot" prefWidth="1200" prefHeight="736">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <children>
                <Label text="กำลังโหลด..." layoutX="20" layoutY="20"/>
            </children>
        </BorderPane>
    </center>
</BorderPane>
