<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<!-- หน้า Home: เมนูด้านบน + contentRoot สำหรับใส่หน้าอื่น -->
<AnchorPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.big_bike_auto.controller.HomeController">

    <!-- แถบหัว: สูง 64, ชิดบนและซ้าย/ขวา -->
    <AnchorPane prefHeight="64.0" style="-fx-background-color: #3381F2;"
                AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <children>
            <Label text="Big_Bike_Auto"
                   style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"
                   layoutX="20" layoutY="20"/>
        </children>
    </AnchorPane>

    <!-- เมนู: วางใต้ header (บน=64), ชิดซ้าย/ขวา -->
    <MenuBar AnchorPane.topAnchor="64.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <menus>
            <Menu text="ลงทะเบียน">
                <items>
                    <MenuItem fx:id="menuRegister" text="เปิดหน้าลงทะเบียน" onAction="#goRegister"/>
                </items>
            </Menu>
            <Menu text="รายละเอียดงานซ่อม">
                <items>
                    <MenuItem fx:id="menuRepairDetails" text="เปิดหน้ารายละเอียดงานซ่อม" onAction="#goRepairDetails"/>
                </items>
            </Menu>
            <Menu text="สินค้าคงคลัง">
                <items>
                    <MenuItem fx:id="menuInventory" text="เปิดหน้าสินค้าคงคลัง" onAction="#goInventory"/>
                </items>
            </Menu>
            <Menu text="รายการซ่อม">
                <items>
                    <MenuItem fx:id="menuRepairList" text="เปิดหน้ารายการซ่อม" onAction="#goRepairList"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- พื้นที่เนื้อหา: วางใต้เมนู (บน=89 = 64+25), ชิดซ้าย/ขวา/ล่าง -->
    <AnchorPane fx:id="contentRoot"
                AnchorPane.topAnchor="89.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <children>
            <Label text="กำลังโหลด..." layoutX="20" layoutY="20"/>
        </children>
    </AnchorPane>

</AnchorPane>
