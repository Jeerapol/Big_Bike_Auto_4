<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.big_bike_auto.controller.InventoryController">

    <!-- แถบบน -->
    <top>
        <HBox spacing="10" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label text="สต็อกอะไหล่" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="รีเฟรช" onAction="#onRefresh"/>
                <Button text="เพิ่มอะไหล่" onAction="#onAddPart"/>
                <Button text="ลบอะไหล่" onAction="#onRemovePart"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- ตารางสต็อก -->
    <center>
        <TableView fx:id="tvInventory" prefHeight="480">
            <columns>
                <TableColumn fx:id="colPartName" text="รายการอะไหล่" prefWidth="250"/>
                <TableColumn fx:id="colQty" text="จำนวน" prefWidth="120"/>
                <TableColumn fx:id="colUnit" text="หน่วย" prefWidth="120"/>
                <TableColumn fx:id="colPrice" text="ราคา" prefWidth="140"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
